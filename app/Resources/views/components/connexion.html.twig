{% block connexion %}
    <div>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
            <a href="{{ path('fos_user_security_logout') }}">
                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
            </a>
        {% else %}
            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <label>Utilisateur</label>
                <input class="mdl-textfield__input"  type="text" id="_username" name="_username" value="{{ last_username }}" required="required" style="width: 170px; display: inline"/>

                <label>Mot de passe</label>
                <input class="mdl-textfield__input"   type="password" id="password" name="_password" required="required" style="width: 170px; display: inline"/>

                <button id="_submit" name="_submit"  class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored mdl-js-ripple-effect mdl-button--accent deleteConfirmDialog" value="{{ 'security.login.submit'|trans }}" type="submit">
                    <i class="material-icons">account_box</i>
                </button>
            </form>
        {% endif %}
    </div>

    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="flash-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    <div>
        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>
{% endblock %}