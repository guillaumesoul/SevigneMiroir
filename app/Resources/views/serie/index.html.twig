                    <i class="material-icons">add</i>
                </button>
            </a>

            {% for serie in series %}
                <div class="mdl-cell mdl-cell--2-col mdl-card mdl-shadow--2dp">
                    <a href="{{ path('serie_edit', {'serieId': serie.id}) }}">
                        <div class="mdl-card__title ">
                            <h4>{{ serie.name }}</h4>
                        </div>
                    </a>
                    <div class="mdl-card__actions mdl-card--border">
                        Starts - Finish
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

