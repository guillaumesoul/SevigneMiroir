{% extends 'base.html.twig' %}

{% block body %}

    <div class="mdl-layout__content">
        <div class="mdl-grid">
            <h3 class="mdl-cell mdl-cell--12-col">Séries </h3>
            <a class="mdl-cell mdl-cell--12-col" href="{{ path('serie_add') }}">
