{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <ul class="demo-list-item mdl-list">
        <li class="mdl-list__item mdl-list__item_form">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <label class="mdl-textfield__label" for="username">{{ 'security.login.username'|trans }}</label>
                <input class="mdl-textfield__input"  type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
        </li>
        <li class="mdl-list__item mdl-list__item_form">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <label class="mdl-textfield__label"  for="password">{{ 'security.login.password'|trans }}</label>
                <input class="mdl-textfield__input"   type="password" id="password" name="_password" required="required" />
            </div>
        </li>
        <li class="mdl-list__item mdl-list__item_form">
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input class="mdl-checkbox" type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label class="mdl-checkbox__label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
        </li>
        <li class="mdl-list__item mdl-list__item_form">
            <button id="_submit" name="_submit"  class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored deleteConfirmDialog" value="{{ 'security.login.submit'|trans }}" type="submit">
                <i class="material-icons">delete</i>
            </button>
        </li>
    </ul>
    {#<input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />#}
</form>


